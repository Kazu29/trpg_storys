<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザーオプション</h2>
      <%= form_with model:@user, method: :patch do |f| %>
      
      <div class="form-group">
        <%= f.label :ユーザー名 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      
      <<%= f.submit "編集内容を保存", class: "btn btn-success" %>
      <%= link_to "退会する",user_quit_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>
