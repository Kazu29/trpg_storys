<table class='table'>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>作成シナリオ数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %><td>
        <td><%= user.scenarios.count %></td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
