<div class="container">
  <div class="row">
    <h1>投稿シナリオ編集画面</h1>
    <%= form_with model: @scenario do |f| %>
    <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "選択してください") %>
    </div>
    <div class="form-group">
      <label for="inputTitle">タイトル</label>
       <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputTitle" %>
    </div>
    <div class="form-group">
      <label for="inputOverview">概要</label>
      <%= f.text_area :overview, autofocus: true, class:"form-control", id:"inputOverview" %>
    </div>
    <div class="form-group">
      <label for="inputContent">シナリオ</label>
      <%= f.text_area :content, :size=>"100x100",autofocus: true, class:"form-control", id:"inputContent" %>
    </div>
     <div class="form-group">
        <%= f.submit "シナリオ更新",class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>