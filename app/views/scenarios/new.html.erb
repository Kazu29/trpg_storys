<div>
  <h1>新規シナリオ作成</h1>
  <div class="row">
    <%= form_with model: @scenario,local:true do |f| %>
    <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "選択してください") %>
    </div>
    <div class="form-group">
      <%= f.label :タイトル %>
      <%= f.text_field :title, placeholder: "タイトルを記載してください" %>
    </div>
    <div class="form-group">
      <%= f.label :概要 %>
      <%= f.text_area :overview, placeholder: "概要を記載してください" %>
    </div>
    <div class="form-group">
      <%= f.label :シナリオ %>
      <%= f.text_area :content, :size=>"100x100",placeholder: "シナリオを記載してください" %>
    </div>
    <div class="form-group">
      <%= f.submit "新規作成", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>