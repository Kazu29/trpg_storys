<div class="container">
  <h2 class="text-center">ジャンル編集</h2>
  <%= form_with model: @genre, url:genre_path(@genre.id), method: :patch do |f| %>
    <%= f.label :name, "ジャンル名", style:"margin-top:5px ;"%>
	  <%= f.text_field :name, placeholder: "ジャンル名", style:"margin-left:50px;" %>
	  <%= f.submit "変更を保存",class: "btn btn-success px-4", style:"font-weight:bold; margin-left:50px;" %>
	<% end %>
</div>