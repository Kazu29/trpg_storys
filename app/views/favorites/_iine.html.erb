<% if scenario.favorited_by?(current_user) %>
    <p>
      <%= link_to scenario_favorites_path(scenario), method: :delete do %>
        ♥<%= scenario.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to scenario_favorites_path(scenario), method: :post do %>
        ♡<%= scenario.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>